<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorTransparantWhite"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorgreen"
        android:hint="Linear Layout Example"
        android:textColorHint="@color/colorWhite" />

    <Button
        android:id="@+id/btn_relative"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorgreen"
        android:hint="Relative Layout Example"
        android:textColorHint="@color/colorWhite" />


    <Button
        android:id="@+id/btn_frame"
        android:background="@color/colorgreen"
        android:textColorHint="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frame Layout Example"/>

    <Button
        android:id="@+id/btn_table"
        android:background="@color/colorgreen"
        android:textColorHint="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Table Layout Example"/>

    <Button
        android:id="@+id/btn_absolute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorgreen"
        android:hint="Absolute Layout Example"
        android:textColorHint="@color/colorWhite" />

    <Button
        android:id="@+id/btn_coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorgreen"
        android:hint="Coordinator Layout Example"
        android:textColorHint="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Note : Some layout examples appear the same but have different codes"/>
</LinearLayout>
